<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JobType"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#F3F3F3"
        android:textAlignment="center"
        android:background="#00B4AD"
        android:id="@+id/jobTypeInfo_dialog"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipInfo_dialog"
        android:layout_margin="5dp"
        android:textSize="25dp"
        android:textColor="#6D6D6D"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:text="Tip: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startTimeInfo_dialog"
        android:layout_margin="5dp"
        android:textSize="25dp"
        android:textColor="#6D6D6D"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:text="Start Time: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endTimeInfo_dialog"
        android:layout_margin="5dp"
        android:textSize="25dp"
        android:textColor="#6D6D6D"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:text="End Time: "/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/viewJobDetail_dialog"
        android:layout_margin="10dp"
        android:text="View Detail"
        android:textSize="27dp"
        android:textColor="#F3F3F3"
        android:background="#00B4AD"
        android:layout_gravity="center" />
</LinearLayout>