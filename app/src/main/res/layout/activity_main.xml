<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dennis.minigoget.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Mini GoGet Application"
        android:textSize="30dp"
        android:textColor="#F3F3F3"
        android:background="#00B4AD"
        android:id="@+id/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320px">

        <ImageView
            android:id="@+id/mainmenu_Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/runningman_tale_color_01"/>
    </LinearLayout>

    <TextView
      android:id="@+id/email_textView"
        android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Mini GoGet E-Mail: "
      android:textSize="25dp" />
    <EditText
        android:id="@+id/mainmenu_edittext_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" please enter your email"
        android:text="finjer@naver.com"
        android:textSize="25dp"
        android:textColorHint="#e1e1ef"
        android:background="@drawable/mainmenu_edittext_surrounding" />
    <TextView
        android:id="@+id/password_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mini GoGet Password: "
        android:textSize="25dp" />
    <EditText
        android:id="@+id/mainmenu_edittext_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" please enter your password"
        android:text="finjer1215"
        android:inputType="textPassword"
        android:textSize="25dp"
        android:textColorHint="#e1e1ef"
        android:background="@drawable/mainmenu_edittext_surrounding" />
    <Button
        android:id="@+id/mainmenu_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textSize="25dp"
        android:layout_gravity="center" />

</LinearLayout>
